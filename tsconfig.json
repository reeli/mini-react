{
  "compilerOptions": {
    "target": "es2015",
    "module": "es2015",
    "moduleResolution": "node",
    "strict": true,
//    "strictFunctionTypes": false,
    "jsx": "react-jsx",
    "alwaysStrict": true,
    "pretty": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "outDir": ".output",
    "baseUrl": ".",
    "rootDir": ".",
    "resolveJsonModule": true,
    "paths": {
      "*": ["*", "__types__/*"]
    },
    "importHelpers": true
  },
  "exclude": ["node_modules", "source", "**/__tests__/**"]
}
